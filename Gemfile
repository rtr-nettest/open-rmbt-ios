source 'https://rubygems.org'

# Use modern Ruby to satisfy CocoaPods dependencies (e.g. activesupport).
# On Apple Silicon, prefer Homebrew Ruby at /opt/homebrew/opt/ruby.
ruby '>= 3.1', '< 4.0'

# CocoaPods compatible with Xcode 16 project formats.
gem 'cocoapods', '~> 1.16'

# Helpful for pretty xcodebuild output in CI/local builds.
group :development do
  gem 'xcpretty', '~> 0.3'
end
